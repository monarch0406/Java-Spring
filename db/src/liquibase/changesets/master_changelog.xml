<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
       http://www.liquibase.org/xml/ns/dbchangelog
       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <changeSet id="1-create-audit-table" author="bro">
    <createTable tableName="audit">
      <column name="id"           type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="user_id"      type="BIGINT">
        <constraints nullable="false" foreignKeyName="fk_audit_user" references="users(id)"/>
      </column>
      <column name="column_name"  type="VARCHAR(50)"/>
      <column name="before_value" type="VARCHAR(255)"/>
      <column name="after_value"  type="VARCHAR(255)"/>
      <column name="created_at"   type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
    </createTable>
  </changeSet>

</databaseChangeLog>


